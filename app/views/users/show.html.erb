<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "layouts/list", book:@book, user:@user %>
    </div>
    <div class="col-8 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                 <%= image_tag @user.get_profile_image("50x50") %>
              </td>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
