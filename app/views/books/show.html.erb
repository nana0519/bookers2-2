<div class="container">
  <div class="row">
    
    <div class="col-3">
      <%= render "layouts/list",  book:@book, user:@book.user %>
    </div>
    
    <div class="col-8 offset-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image("50x50") %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
             </td>
             <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  
  </div>
</div>
